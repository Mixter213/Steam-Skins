"resource/layout/steamrootdialog.layout" {

	colors {

		// Inbox Button ------------------------------------------------------------

			Inbox_Button_Default = "40 80 160 255"
			Inbox_Button_Hover = "50 100 200 255"
			Inbox_Button_Selected = "40 160 80 255"
			Inbox_Button_Disabled = "160 160 160 255"

			Inbox_Button_Active_Default = "50 200 100 255"
			Inbox_Button_Active_Hover = "40 160 80 255"
			Inbox_Button_Active_Selected = "50 200 100 255"
			Inbox_Button_Active_Disabled = "160 160 160 255"

			Inbox_Dropdown_Text = "200 200 200 255"
			Inbox_Dropdown_Text_Hover = "220 220 220 255"
			Inbox_Dropdown_Text_Active = "240 240 240 255"

		// Announcement Button ------------------------------------------------------------

			Announcement_Default = "40 80 160 255"
			Announcement_Hover = "50 100 200 255"

		// Parental Lock Button ------------------------------------------------------------

			Parental_Default = "40 80 160 255"
			Parental_Hover = "50 100 200 255"
			Parental_Selected = "50 200 100 255"
			Parental_Selected_Hover = "40 160 80 255"

		// Add Game Button ------------------------------------------------------------

			Add_Game_Text = "200 200 200 255"
			Add_Game_Text_Hover = "220 220 220 255"

		// Add Game Button ------------------------------------------------------------

			View_Friends_Text = "200 200 200 255"
			View_Friends_Text_Hover = "220 220 220 255"

		//------------------------------------------------------------

	}


	styles {

		// Frame ------------------------------------------------------------

			// Title bar
			"FrameTitle" {
				textcolor = "0 0 0 0"
			}

		// Big Picture Button ------------------------------------------------------------

			// Big Picture Button
			"FullscreenButton" {
				image = "graphics/icon_controller_bpm"
			}

			// Big Picture Button - Hover
			"FullscreenButton:hover" {
				image = "graphics/icon_controller_bpm_over"
			}

			// Big Picture Button - Active
			"FullscreenButton:active" {
				image = "graphics/icon_controller_bpm_disabled"
			}

		// Inbox Button ------------------------------------------------------------

			// Inbox Button - Default ------------------------------------------------------------

				// Inbox Button
				"inbox_button" {
					render_bg {
						0 = "fill( x0, y0, x1, y1, Inbox_Button_Default )"
						1 = "image( x1 - 22, y0 + 4, x1 - 2, y1, graphics/inbox_notification_inactive )"
					}
				}

				// Inbox Button - Hover
				"inbox_button:hover" {
					render_bg {
						0 = "fill( x0, y0, x1, y1, Inbox_Button_Hover )"
						1 = "image( x1 - 22, y0 + 4, x1 - 2, y1, graphics/inbox_notification_inactive )"
					}
				}

				// Inbox Button - Selected
				"inbox_button:selected" {
					render_bg {
						0 = "fill( x0, y0, x1, y1, Inbox_Button_Selected )"
						1 = "image( x1 - 22, y0 + 4, x1 - 2, y1, graphics/inbox_notification_inactive )"
					}
				}

				// Inbox Button - Disabled
				"inbox_button:disabled" {
					render_bg {
						0 = "fill( x0, y0, x1, y1, Inbox_Button_Disabled )"
						1 = "image( x1 - 22, y0 + 4, x1 - 2, y1, graphics/inbox_notification_inactive_disabled )"
					}
				}

			// Inbox Button - Active ------------------------------------------------------------

				// Inbox Button - Active
				"inbox_button_active" {
					render_bg {
						0 = "fill( x0, y0, x1, y1, Inbox_Button_Active_Default )"
						1 = "image( x1 - 22, y0 + 4, x1 - 2, y1, graphics/inbox_notification )"
					}
				}

				// Inbox Button - Active - Hover
				"inbox_button_active:hover" {
					render_bg {
						0 = "fill( x0, y0, x1, y1, Inbox_Button_Active_Hover )"
						1 = "image( x1 - 22, y0 + 4, x1 - 2, y1, graphics/inbox_notification )"
					}
				}

				// Inbox Button - Active - Selected
				"inbox_button_active:selected" {
					render_bg {
						0 = "fill( x0, y0, x1, y1, Inbox_Button_Active_Selected )"
						1 = "image( x1 - 22, y0 + 4, x1 - 2, y1, graphics/inbox_notification )"
					}
				}

				// Inbox Button - Active - Disabled
				"inbox_button_active:disabled" {
					render_bg {
						0 = "fill( x0, y0, x1, y1, Inbox_Button_Active_Disabled )"
						1 = "image( x1 - 22, y0 + 4, x1 - 2, y1, graphics/inbox_notification_disabled )"
					}
				}

			// Inbox Dropdown Menu ------------------------------------------------------------

				
				inboxmenuitem {
					textcolor = "Inbox_Dropdown_Text"
				}

				inboxmenuitem:hover {
					textcolor = "Inbox_Dropdown_Text_Hover"
				}

				inboxmenuitem:active {
					textcolor = "Inbox_Dropdown_Text_Active"
				}

		// Announcement Button------------------------------------------------------------

			// Announcement Button
			"announcement_button" {
				render_bg {
					0 = "fill( x0, y0, x1, y1, Announcement_Default )"
					1 = "image( x1 - 20, y0 + 3, x1 - 2, y1, graphics/updatenone_notification )"
				}
			}

			// Announcement Button - Hover
			"announcement_button:hover" {
				render_bg {
					0 = "fill( x0, y0, x1, y1, Announcement_Hover )"
					1 = "image( x1 - 20, y0 + 3, x1 - 2, y1, graphics/updatenone_notification )"
				}
			}

		// Parental Lock Button ------------------------------------------------------------

			// Parental Button
			"parental_lock_button" {
				render_bg {
					0 = "fill( x0, y0, x1, y1, Parental_Default )"
					1 = "image( x0 + 9, y0 + 2, x1, y1, graphics/notfamilyview )"
				}
			}

			// Parental Button - Hover
			"parental_lock_button:hover" {
				render_bg {
					0 = "fill( x0, y0, x1, y1, Parental_Hover )"
					1 = "image( x0 + 9, y0 + 2, x1, y1, graphics/notfamilyview )"
				}
			}

			// Parental Button - Selected
			"parental_lock_button:selected" {
				render_bg {
					0 = "fill( x0, y0, x1, y1, Parental_Selected )"
					1 = "image( x0 + 9, y0 + 2, x1, y1, graphics/notfamilyview )"
				}
			}

			// Parental Button - Selected - Hover
			"parental_lock_button:selected:hover" {
				render_bg {
					0 = "fill( x0, y0, x1, y1, Parental_Selected_Hover )"
					1 = "image( x0 + 9, y0 + 2, x1, y1, graphics/notfamilyview )"
				}
			}

		// Add Game Button ------------------------------------------------------------

			// Add Game Button
			AddGameButton {
				font-family = "Arial"
				font-size = "14"
				padding-left = "24"
				textcolor = "Add_Game_Text"
				render_bg {
					0 = "image( x0 + 2, y0 + 4, x1, y1, graphics/icon_addgame )"
				}
			}

			// Add Game Button - Hover
			AddGameButton:hover {
				textcolor="Add_Game_Text_Hover"
				render_bg
				{
					0 = "image( x0 + 2, y0 + 4, x1, y1, graphics/icon_addgame_over )"
				}

			}

		// View Friends Button ------------------------------------------------------------

			// View Friends Button
			view_friends {
				font-family = "Arial"
				font-size = "14"
				padding-right=28
				textcolor = "View_Friends_Text"
				render_bg {
					1 = "image( x1-30, y0+20, x1, y1, graphics/icon_friendslist )" 
				}

			}

			// View Friends Button - Hover
			view_friends:Hover {
				textcolor = "View_Friends_Text_Hover"
				render_bg {
					1 = "image( x1-30, y0+20, x1, y1, graphics/icon_friendslist_over )"
				}
			}

			// View Friends Button - Disabled
			view_friends:disabled {
				textcolor = "View_Friends_Text_Disabled"
			}


		//------------------------------------------------------------

	}

	layout {

		// Main Items ------------------------------------------------------------

			// Main Container Region - Keeps items nice and centered
			region {
				name = "Main Container"
				height = "max"
				width = "max"
				margin = "8"
			}

			// Navigation Panel
			place {
				control = "UINavigatorPanel"
				region = "Main Container"
				height = "max"
				width = "max"
				margin-top = "20"
				margin-bottom = "64"
			}

			// Status Panel
			place {
				control = "UIStatusPanel"
				region = "Main Container"
				height = "60"
				width = "max"
				align = "bottom"
			}

		// Frame ------------------------------------------------------------

			// Draggable Grip Panel
			place {
				control = "frame_captiongrip"
				region = "Main Container"
				height = "104"
				width = "max"
			}

			// Window Buttons
			place {
				controls = "frame_minimize, frame_maximize, frame_close"
				region = "Main Container"
				align = "right"
				height = "20"
				width = "20"
			}

		// Menu Bar ------------------------------------------------------------

			// Menu Bar
			place {
				control = "MenuBar"
				region = "Main Container"
				height = "20"
			}

		// Top Bar Items ------------------------------------------------------------

			// Big Picture Button
			place {
				control = "fullscreen"
				region = "Main Container"
				end-right = "frame_minimize"
				align = "right"
				height = "20"
				width = "30"
				margin-right = "8"
			}

			// Vr - Start - Exit
			place {
				controls = "startvr, exitvr"
				region = "Main Container"
				end-right = "fullscreen"
				align = "right"
				height = "20"
				width = "30"
				margin-right = "8"
				spacing = "8"
			}

			// Account Button
			place {
				control = "AccountButton"
				region = "Main Container"
				end-right = "startvr"
				align = "right"
				height = "20"
				margin-right = "16"
			}

			// Inbox Button
			place {
				control = "InboxButton"
				region = "Main Container"
				end-right = "AccountButton"
				align = "right"
				height = "20"
				width = "30"
				margin-right = "8"
			}

			// Announcement Button
			place {
				control = "AnnouncementButton"
				region = "Main Container"
				end-right = "InboxButton"
				align = "right"
				height = "20"
				width = "30"
				margin-right = "8"
			}

			// Parental Lock Button
			place {
				control = "ParentalLockButton"
				region = "Main Container"
				end-right = "AnnouncementButton"
				align = "right"
				height = "20"
				width = "30"
				margin-right = "8"
			}

			// Alert Labels
			place {
				controls = "universe_label, EOLAlert, SupportAlert"
				region = "Main Container"
				end-right = "ParentalLockButton"
				align = "right"
				height = "20"
				width = "30"
				margin-right = "8"
				spacing = "8"
			}

		// Bottom Bar Items ------------------------------------------------------------

			// Add Game Button
			place {
				control = "add_game"
				region = "Main Container"
				align = "bottom"
				height = "30"
			}

			// Friends List Button
			place {
				control = "view_friends"
				region = "Main Container"
				align = "bottom-right"
				height = "64"
				width = "160"
			}

		//------------------------------------------------------------

	}

}
