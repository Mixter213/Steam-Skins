"resource/layout/uistatuspanel.layout" {

	styles {

		// Downloading Status Items ---------------------------------------------------------------------------------------

			// Downloading Label
			"StatusLabel" {
				textcolor = "200 200 200 255"
			}

			// Downloading Status Label
			"StatusLabelDim" {
				textcolor = "200 200 200 255"
			}

			// Downloading Status Progress Bar
			"SlimProgressBar" {
				// textcolor - Filled Color | bgcolor - bar background
				textcolor = "40 80 160 255"
				bgcolor = "24 24 24 255"
			}

		//---------------------------------------------------------------------------------------

	}

	layout {

		// Downloading Status Items ---------------------------------------------------------------------------------------
			
			// Downloading Label
			place {
				control = "StatusDownloading" 
				align = "top-center" 
				height = "20"
			}
			
			// Downloading Status Label
			place {
				control = "StatusPaused, StatusComplete" 
				align = "top-center" 
				height = "20"
				y = "20"
			}
			
			// Downloading Status Progress Bar
			place {
				control = "StatusProgressbar"
				align = "top-center"
				height = "4"
				width = "240"
				y = "40"
			}

		//---------------------------------------------------------------------------------------

	}


}