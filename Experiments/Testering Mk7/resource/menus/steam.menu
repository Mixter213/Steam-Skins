			}

			// Legal
			"Legal" {
				text = "#steam_menu_LegalInformation"
				shellcmd = "steam://url/LegalInformation" 
			}

			// Steam Sub Agreement
			"SSA" {
				text = "#steam_menu_SteamSubscriberAgreement"
				shellcmd = "steam://url/SSA" 
			}
			
			// Menu Separator ----------------------------------------------
			"Divider" {}

			// System Info
			"SystemInfo" {
				text = "#steam_menu_systeminfo"
				command = "SystemInfo" 
			}

			// Steam About
			"About" {
				text = "#steam_about"
				command = "About" 
			}

		//-----------------------------------------------------------------------------------------------------

	}

}