"resource/layout/accountmenu.layout" {

	colors {

		// Account Dropdown Menu -------------------------------------------------------------------

			Account_Dropdown_Text = "200 200 200 255"
			Account_Dropdown_Text_Hover = "220 220 220 255"

			Account_Dropdown_Label_Text = "50 100 200 255"
	
		//-------------------------------------------------------------------

	}

	styles {

		// Account Dropdown Menu -------------------------------------------------------------------

			// Account Dropdown Menu - Main Container
			AccountMenuStyle {
				bgcolor = "40 40 40 255"
			}

			// Account Dropdown Menu - Items
			"account_menu_button" {
				font-family = "Arial"
				font-size = "14"
				textcolor = "Account_Dropdown_Text"
			}

			// Account Dropdown Menu - Items - Hover
			"account_menu_button:hover" {
				font-family = "Arial"
				font-size = "14"
				textcolor = "Account_Dropdown_Text_Hover"
			}

			// Account Dropdown Menu - Labels
			"account_menu_label" {
				font-family = "Arial"
				font-size = "14"
				textcolor = "Account_Dropdown_Label_Text"
			}

		//-------------------------------------------------------------------

	}

	layout{

		// Account Menu - Items -------------------------------------------------------------------


			place {
				control = "view_profile_button,view_account_button,change_user_button,view_preferences_button,view_wallet_button"
				height = "20"
				width = "max"
				dir = "down"
				spacing = "4"
				margin = "4"
			}

		//-------------------------------------------------------------------

	}

}
