"resource/layout/accountmenu.layout" {

	styles {

		// Account Dropdown Menu -----------------------------------------------------------------------------

			// Main Background
			AccountMenuStyle {
				render_bg
				{
					0 = "gradient( x0, y0, x1, y1, MenuBG1, MenuBG2 )"
					1 = "fill( x0 + 1, y0, x1 - 1, y0 + 1, blueborder )"
					2 = "fill( x0 + 1, y1 - 1, x1 - 1, y1, blueborder )"
					3 = "fill( x0, y0 + 1, x0 + 1, y1 - 1, blueborder )"
					4 = "fill( x1 - 1, y0 + 1, x1, y1 - 1, blueborder )"
				}
			}
		
			// Item
			account_menu_button {
				font-size = "14"
				font-weight = "regular"
				textcolor = "label"
				font-style = ""
				render_bg{}
			}
			
			// Item - Hover
			account_menu_button:hover {
				textcolor = "SuperNavHover"
			}
			
			// Item - Extra
			account_menu_label {
				font-size = "14"
				font-weight = "regular"
				textcolor = "Friends.OnlineColor"
				font-style = ""
				render_bg{}
			}

		//-----------------------------------------------------------------------------

	}
	
	layout {

		//-----------------------------------------------------------------------------

			
			// Button - View Profile
			place {
				control = "view_profile_button"
				align = left
				margin-left = 4
				margin-top = 4
				height = 24
				width = max
			}
			
			// Button - View Account
			place {
				control = "view_account_button"
				align = left
				margin-left = 4
				margin-top = 28
				height = 24
				width = max
			}
			
			// Button - Change User
			place {
				control = "change_user_button"
				align = left
				margin-left = 4
				margin-top = 52
				height = 24
				width = max
			}
			
			// Button - View Preferences
			place {
				control = "view_preferences_button"
				align = left
				margin-left = 4
				margin-top = 76
				height = 24
				width = max
			}
			
			// Button - View Wallet
			place {
				control = "view_wallet_button"
				align = left
				margin-left = 4
				margin-top = 100
				height = 24
				width = max
			}

		//-----------------------------------------------------------------------------

	}

}