"resource/layout/screenshotmanager.layout" {

	layout {

		// Top Bar ------------------------------------------------------------------------------------------

			// Selector Label
			place {
				control = "selectorlabel"
				height = "30"
				width = "50"
				x = "10"
				y = "40"
			}

			// Selector Label
			place {
				control = "game_selector"
				start = "selectorlabel"
				height = "30"
				width = "280"
				x = "10"
			}

		// Left Panel ------------------------------------------------------------------------------------------

			// Screenshot Grid
			place {
				control="grid"
				start = "selectorlabel"
				dir = "down"
				height = "max"
				width = "340"
				y = "4"
				margin-bottom = "38"
			}
			
			// Screenshot Grid - Empty
			place {
				control="no_screenshots"
				start = "selectorlabel"
				dir = "down"
				height = "max"
				width = "340"
				y = "4"
				margin-bottom = "38"
			}

			// Bottom Bar ------------------------------------------------------------------------------------------

				// Multi Select Button
				place {
					control = "multiselect_button"
					align = "bottom"
					height = "30"
					x = "4"
					margin-bottom = "4"
				}

				// View Local Button
				place {
					control = "view_local_library_button"
					start = "multiselect_button"
					height = "30"
					x = "4"
					margin-bottom = "4"
				}

				// View Online Button
				place {
					control = "view_screenshots"
					start = "view_local_library_button"
					align = "bottom"
					height = "30"
					x = "4"
					margin-bottom = "4"
				}

			// ------------------------------------------------------------------------------------------


		// Right Panel ------------------------------------------------------------------------------------------

			// Image ------------------------------------------------------------------------------------------

				// Image
				place {
					control = "SSDetails"
					height = "max"
					width = "max"
					x = "362"
					y = "40"
					margin-right = "10"
					margin-bottom = "166"
				}
				
				// Image Timestamp
				place {
					control = "SSDate"
					start = "SSDetails"
					dir = "down"
					height = "30"
					width = "max"
					margin-right = "10"
				}
				
				// Image Size - Image Original Size
				place {
					control = "SSSize, SSSizeOriginal"
					start = "SSDate"
					align = "right"
					height = "30"
					margin-right = "10"
				}

				// Image Caption
				place {
					control = "details_caption"
					align = "bottom-right"
					height = "64"
					width = "max"
					margin-left = "362"
					margin-right = "10"
					margin-bottom = "102"
				}

				// Spoiler Checkbox
				place {
					control = "spoiler_checkbox"
					align = "bottom-right"
					height = "30"
					width = "max"
					margin-left = "362"
					margin-right = "10"
					margin-bottom = "38"
				}

				place {
					control = "publish_button"
					align = "bottom-right"
					height = "30"
					margin-right = "10"
					margin-bottom = "4"
				}

				place {
					control = "delete_button"
					align = "bottom-right"
					end-right = "publish_button"
					height = "30"
					margin-right = "10"
					margin-bottom = "4"
				}

				place {
					control = "details_button"
					align = "bottom-right"
					end-right = "delete_button"
					height = "30"
					margin-right = "10"
					margin-bottom = "4"
				}


			// No Selection ------------------------------------------------------------------------------------------

				place {
					control = "instr_no_selection_title"
					height = "30"
					width = "max"
					x = "362"
					y = "40"
					margin-right = "10"
				}

				place {
					control = "instr_no_selection"
					start = "instr_no_selection_title"
					dir = "down"
					height = "max"
					width = "max"
					y = "4"
					margin-bottom = "38"
					margin-right = "10"
				}

			// ------------------------------------------------------------------------------------------

		// ------------------------------------------------------------------------------------------

		region { name="details" align=right margin-right=10 margin-top=34 margin-bottom=5 margin-left=358 height=max }


		place { control="publish_caption" region="details" x=5 align=bottom margin-bottom=55 height=40 margin-right=3 width=max  }
		place { control="publish_charsleft" region="details" x=5 align="bottom-right" margin-bottom=35 height=20 margin-right=5 }

		place { control="multi_img" region="details" y=80 align="top-center" }
		place { control="multi_img_count" region="details" y=92 align="top-center" }
		place { control="multi_img_selected" region=details y=180  align="top-center" }
		place { control="multi_img_upload_size,multi_img_upload_size_info" region=details y=205 align="top-center" spacing=5 }
		place { control="multi_img_storage_remaining,multi_img_storage_remaining_info" region=details y=220 align="top-center" spacing=5 }
		place { control="multi_img_delete,multi_img_upload" region=details y=260 align="top-center" spacing=8 }

		place { control="file_not_loaded_label" region="details" y=140 align="top-center" }

	}

}