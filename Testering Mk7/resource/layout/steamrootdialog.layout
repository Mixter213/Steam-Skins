"resource/layout/steamrootdialog.layout"{

	styles {

		// Main Window -------------------------------------------------------------------------------

			"FrameTitle" {
				textcolor = "0 0 0 0"
			}

		// -------------------------------------------------------------------------------


	}


	layout {

		// Main Window -------------------------------------------------------------------------------

			// Frame - Caption Grip
			place {
				control = "frame_captiongrip"
				height = "100"
				width = "max"
				x = "0"
				y = "0"
			}

			// Navigator Panel
			place {
				control = "UINavigatorPanel"
				height = "max"
				width = "max"
				y = "24"
				margin-bottom = "60"
			}


		// -------------------------------------------------------------------------------

		// Menu Bar -------------------------------------------------------------------------------

			// Menu Bar (Not OSX)
			place {
				control = "MenuBar"
				height = "24"
				x = "6"
				y = "6"
			}

		// -------------------------------------------------------------------------------

		// Top Bar -------------------------------------------------------------------------------

			// Big Picture -------------------------------------------------------------------------------

				// Top Bar - Big Picture
				place {
					control = "fullscreen"
					align = "right"
					end-right = "frame_minimize"
					spacing = "8"
					height = "24"
					width = "30"
					y = "6"
					margin-right = "8"
				}

			// -------------------------------------------------------------------------------

			// VR -------------------------------------------------------------------------------

				// VR Start - VR Exit
				place {
					control = "startvr, exitvr"
					align = "right"
					end-right = "fullscreen"
					spacing = "8"
					height = "24"
					y = "6"
					margin-right = "8"
				}
				
			// -------------------------------------------------------------------------------

			// Account -------------------------------------------------------------------------------

				// Top Bar - Account
				place {
					control = "AccountButton"
					align = "right"
					end-right = "startvr"
					spacing = "8"
					height = "24"
					y = "6"
					margin-right = "8"
				}

			// -------------------------------------------------------------------------------

			// Inbox -------------------------------------------------------------------------------

				// Inbox
				place {
					control = "InboxButton"
					align = "right"
					end-right = "AccountButton"
					spacing = "8"
					height = "24"
					width = "34"
					y = "6"
					margin-right = "8"
				}

			// -------------------------------------------------------------------------------

			// Announcment Button -------------------------------------------------------------------------------

				// Announcement Button
				place {
					control = "AnnouncementButton"
					align = "right"
					end-right = "InboxButton"
					spacing = "8"
					height = "24"
					width = "34"
					y = "6"
					margin-right = "8"
				}
		
			// -------------------------------------------------------------------------------

			// Parental Lock -------------------------------------------------------------------------------

				// Top Bar - Parental Lock Button
				place {
					control = "ParentalLockButton"
					align = "right"
					end-right = "AnnouncementButton"
					spacing = "8"
					height = "24"
					width = "44"
					y = "6"
					margin-right = "8"
				}

			// -------------------------------------------------------------------------------

			// Alerts -------------------------------------------------------------------------------

				// Top Bar - Alerts
				place {
					control = "universe_label, EOLAlert, SupportAlert"
					align = "right"
					end-right = "ParentalLockButton"
					spacing = "8"
					height = "24"
					y = "6"
					margin-right = "8"
				}

			// -------------------------------------------------------------------------------

		// -------------------------------------------------------------------------------

		// Bottom Bar -------------------------------------------------------------------------------

			// Status Panel
			place {
				control = "UIStatusPanel"
				align = "bottom"
				height = "40"
				width = "max"
				x = "0"
				y = "0"
			}

			// Bottom Bar - Add Game
			place {
				control = "add_game"
				align = "bottom"
				height = "30"
				x = "10"
				y = "5"
			}

			// Bottom Bar - View Friends
			place {
				control = "view_friends"
				align = "bottom-right"
				height = "40"
				width = "160"
				x = "10"
				y = "10"
			}

		// -------------------------------------------------------------------------------

	}

}